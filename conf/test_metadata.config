/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running minimal tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:
        nextflow run nf-core/magmap -profile test_metadata,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'Test metadata profile'
    config_profile_description = 'Test dataset to check metadata from difference sources'

    // Limit resources so that this can run on GitHub Actions
    max_cpus   = 2
    max_memory = '6.GB'
    max_time   = '6.h'

    // Input data
    // Input data
    input           = params.pipelines_testdata_base_path + 'magmap/samplesheets/samplesheet.csv'
    genomeinfo      = params.pipelines_testdata_base_path + 'magmap/testdata/genometest.csv'
    gtdb_metadata   = params.pipelines_testdata_base_path + 'magmap/testdata/bac120_metadata.tsv' + ',' + params.pipelines_testdata_base_path + 'magmap/testdata/ar53_metadata.tsv'
    checkm_metadata = params.pipelines_testdata_base_path + 'magmap/testdata/checkm.lineage_wf.qa_2.tsv'
    gtdbtk_metadata = params.pipelines_testdata_base_path + 'magmap/testdata/gtdbtk.bac120.summary.tsv'
    indexes         = params.pipelines_testdata_base_path + 'magmap/testdata/sourmash_test.index.sbt.zip'
    sourmash        = true
}
